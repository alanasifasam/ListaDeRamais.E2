
@{
    ViewData["Title"] = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ListaDeRamais.E2</title>


    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />

    <link rel="apple-touch-icon" sizes="76x76" href="assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="assets/img/favicon.png">


    <environment include="Development">
        <link rel="stylesheet" href="~/css/Style.css" />
        <link rel="stylesheet" href="https://bootswatch.com/5/cosmo/bootstrap.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker3.css" />
        <link rel="stylesheet" herf="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.css" />

        <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
        <link href='https://fonts.googleapis.com/css?family=Cambo|Poppins:400,600,700' rel='stylesheet' type='text/css'>
        <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.css" rel="stylesheet">
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://bootswatch.com/5/cosmo/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker3.min.css" />
        <link rel="stylesheet" herf="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </environment>
</head>

<body>

    <header>

        <div class="wrapper">
            <div class="cor-bg text-white"
                <nav class="navbar navbar-expand-lg  p-3 mb-2 ">
                    <div class="container-fluid " id="containerNavBar">

                        <a class="navbar-brand" asp-controller="FunRamais" asp-action="Index"></a>
                        <button class="navbar-toggler " type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">

                            <span class="navbar-toggler-icon "></span>
                        </button>


                    </div>

                </nav>

              </div>
       </div>
        



    </header>

    <div class="main" id="main">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <div class="sidebar">
        <div class="logoContent">
            <div class="logo">
                <i class='bx bxs-phone'></i>
                <div class="logoName">Lista de Ramais</div>
            </div>
            <!--logo-->
            <i class='bx bx-menu' id="btnMenu"></i>
        </div>
        <!--logoContent-->

        <ul class="nav_list">
            <li>
                <a asp-controller="FunRamais" asp-action="Index">
                    <i class='bx bx-list-ol'></i>
                    <span class="links_name">Lista de Ramais</span> 
                    <!-- <span class="toolipe">Lista de Ramais</span>-->

                </a>
            </li>
            <li>
                <a asp-controller="Departamento" asp-action="Index">
                    <i class='bx bxs-business'></i>
                    <span class="links_name">Ramais por departamento</span>
                    <!-- <span class="toolipe">Ramais por departamento</span>-->
                </a>
            </li>
            <li>
                <a asp-controller="Ramais" asp-action="Index">
                    <i class='bx bx-phone'></i>
                    <span class="links_name">Cadastrar Ramais</span>
                    <!-- <span class="toolipe">Cadastrar Ramais</span>-->

                </a>
            </li>
            <li>
                <a asp-controller="Funcionario" asp-action="Index">
                    <i class='bx bx-user-plus'></i>
                    <span class="links_name">Cadastrar funcionário</span>
                    <!-- <span class="toolipe">Cadastrar funcionário</span>-->
                </a>
            </li>
            <li>
                <a asp-controller="FunRamais" asp-action="CriarVinculoRamais">
                    <i class='bx bx-loader-circle bx-rotate-180'></i>
                    <span class="links_name">Atribuir ramal a funcionário</span>
                    <!-- <span class="toolipe">Atribuir ramal a funcionário</span>-->
                </a>
            </li>
        </ul>

        <div class="profileContent">
            <div class="img-profile">
                <div class="profileDetail">
                    <img class="img-logo" src="" />
                    <div class="nome_job">
                        <div class="name">Lista de Ramais</div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!--sidebar-->
    <div class="homeContent">
        <a class="navbar-brand" asp-controller="FunRamais" asp-action="Index">
            <h2>Ramais</h2>
        </a>
    </div>








    <environment include="Development">
        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0-beta1/js/bootstrap.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.css"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/locales/bootstrap-datepicker.pt-BR.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.3/moment.js"></script>


        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
