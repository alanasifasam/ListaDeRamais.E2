@model ListaDeRamais.E2.Models.Funcionario

@{
    ViewData["Title"] = "ExcluirFuncionario";
}




<div class="container Cards">
    <div class="card-body mb-lg-5 p-lg-5" id="card-body">


        <div class="container position-sticky z-index-sticky top-0">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-lg  blur blur-rounded top-0 z-index-fixed shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
                        <div class="container-fluid">

                            <h4 class="text-center">Excluir Funcioário</h4>

                        </div>
                    </nav>
                </div>
            </div>
        </div>





        <div class="card col-6 fixed-section">
            <div class="card-body text-center ">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <h4>Funcionário</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-2">
                                    <h5>Nome</h5>
                                </dt>
                                <dd class="col-10">
                                    @Html.DisplayFor(model => model.Nome)
                                </dd>
                                <dt class="col-3">
                                    <h5>Sobrenome</h5>
                                </dt>
                                <dd class="col-8">
                                    @Html.DisplayFor(model => model.Sobrenome)
                                </dd>
                                <dt class="col-2">
                                   <h5>Cargo</h5>
                                </dt>
                                <dd class="col-9">
                                    @Html.DisplayFor(model => model.Cargo)
                                </dd>
                                <dt class="col-2">
                                   <h5>Email</h5>
                                </dt>
                                <dd class="col-9">
                                    @Html.DisplayFor(model => model.Email)
                                </dd>
                            </dl>

                            <form asp-action="ExcluirFuncionario">
                                <h5>Você tem certeza que deseja excluir o funcionário ?</h5>
                                <input type="hidden" asp-for="CodigoFunId" />
                                <input type="submit" value="Excluir" class="btn_botoes" onclick="alertaExcluirFuncionario()" /> |
                                <a class="btn_botoes" asp-action="Index">Voltar para lista</a>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
