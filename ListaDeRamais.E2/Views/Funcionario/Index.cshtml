@model IEnumerable<ListaDeRamais.E2.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}




<div class="container Cards">
    <div class="card-body mb-lg-5 p-lg-5" id="card-body">

        <div class="container position-sticky z-index-sticky ">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-xxl  blur blur-rounded top-0 z-index-fixed shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
                        <div class="container-fluid">
                            <h4 class="text-center">Funcionários</h4>
                            <p>
                                <a asp-action="CriarFuncionario" class="btn_botoes ">
                                    Criar novo funcionario

                                </a>
                            </p>
                            <div class="container d-table-cell p-3">
                                <div class="container small">
                                    <form asp-controller="Funcionario" asp-action="Index" method="post">
                                        <input class="form-control " name="ProcurarEmFuncionario" />
                                        <button type="submit" class="btn_botoes">Pesquisar</button>
                                    </form>

                                </div>
                            </div>

                        </div>
                    </nav>
                </div>
            </div>
        </div>

        <div class="card ">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr class="text-center">
                            <th>
                                <h6>Nome</h6>
                            </th>
                            <th>
                                <h6>Sobrenome</h6>
                            </th>
                            <th>
                                <h6>Cargo</h6>
                            </th>
                            <th>
                                <h6>Email</h6>
                            </th>
                            <th>
                                <h6>Telefones</h6>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr class="text-center">
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sobrenome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cargo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>

                                @foreach (var telefone in item.Telefones)
                                {

                                    @Html.DisplayFor(m => telefone.NumeroTelefone)
                                    <br />

                                }

                            </td>

                       </tr>
                       <tr>

                            <td colspan="5" class="text-center">
                                <a class="btn_botoes " asp-action="AtualizarFuncionario" asp-route-id="@item.CodigoFunId">Atualizar</a> 
                                <a class="btn_botoes" onclick="alertaExcluirFuncionario()" asp-action="ExcluirFuncionario" asp-route-id="@item.CodigoFunId">Excluir</a>
                                <!-- Button trigger modal -->
                                <i class='bx bxs-info-circle' style='color:#352a7a' data-bs-toggle="modal" data-bs-target="#exampleModal"></i>
                            </td>
                           
                        </tr>
                        }
                    </tbody>
                </table>
               </div>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Atenção !!</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Caso o funcionário esteja vinculado com algum ramal, o vínculo será excluído junto com o funcionário.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn_botoes" data-bs-dismiss="modal">Fechar</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
</div>

