@model ListaDeRamais.E2.Models.DepartamentoRamaisFormViewModel;

@{
    ViewData["Title"] = "AtualizarRamais";
}



<div class="container Cards">
    <div class="card-body mb-lg-5 p-lg-5" id="card-body">


        <div class="container position-sticky z-index-sticky top-0">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-lg  blur blur-rounded top-0 z-index-fixed shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
                        <div class="container-fluid">

                            <h4 class="text-center">Atualizar Ramal</h4>

                        </div>
                    </nav>
                </div>
            </div>
        </div>



        <div class="card col-6 fixed-section">
            <div class="card-body text-center ">
                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="AtualizarRamais">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <input asp-for="CodigoRamalId" type="hidden" class="form-control" />
                                <span asp-validation-for="CodigoRamalId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Numero do Ramal</label>
                                <input asp-for="NumeroRamal" class="form-control" />
                                <span asp-validation-for="NumeroRamal" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Senha</label>
                                <input asp-for="Senha" class="form-control" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Endereço de IP</label>
                                <input asp-for="HostIp" class="form-control" />
                                <span asp-validation-for="HostIp" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="CodigoDepFk" class="control-label">Departamentos</label>

                                <select asp-for="CodigoDepFk" name="CodigoDepFk" value="CodigoDepFk"
                                        asp-items="@(new SelectList(Model.CodigoDepFkNavigation,"CodigoDepId","Nome"))"
                                        class="form-control">
                                    Departamento
                                </select>

                            </div>
                            <div>
                                <input asp-for="CodigoDepFk" value="CodigoDepFk" name="CodigoDepFk" type='hidden' class="form-control" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Salvar" class="btn_botoes" />|
                                <a class="btn_botoes" asp-action="Index">Voltar para a lista</a>
                            </div>
                        </form>
                    </div>
                </div>




                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
            </div>
        </div>
    </div>
</div>