@model DepartamentoRamaisFormViewModel;



<div class="container Cards">
    <div class="card-body mb-lg-5 p-lg-5" id="card-body">


        <div class="container position-sticky z-index-sticky top-0">
            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-lg  blur blur-rounded top-0 z-index-fixed shadow position-absolute my-3 py-2 start-0 end-0 mx-4">
                        <div class="container-fluid">

                            <h4 class="text-center">Criar Ramal</h4>

                        </div>
                    </nav>
                </div>
            </div>
        </div>




        <div class="card col-6 fixed-section">
            <div class="card-body text-center ">

                <div class="row">
                    <div class="col-md-12">
                        <form asp-action="CriarRamais">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label class="control-label">Numero do Ramal</label>
                                <!-- Button trigger modal -->
                                <i class='bx bxs-info-circle' style='color:#352a7a' data-bs-toggle="modal" data-bs-target="#exampleModal"></i>
                                <input asp-for="NumeroRamal" class="form-control" />
                                <span asp-validation-for="NumeroRamal" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Senha</label>
                                <input asp-for="Senha" class="form-control" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CodigoDepFk" class="control-label">Departamentos</label>

                                <select asp-for="CodigoDepFk" name="CodigoDepFk" value="CodigoDepFk"
                                        asp-items="@(new SelectList(Model.CodigoDepFkNavigation,"CodigoDepId","Nome"))"
                                        class="form-control">
                                    Departamento
                                </select>

                            </div>
                            <div>
                                <input asp-for="CodigoDepFk" value="CodigoDepFk" name="CodigoDepFk" type='hidden' class="form-control" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Criar" class="btn_botoes" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a class="btn_botoes" asp-action="Index">Voltar para a lista</a>
                </div>



                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Regra de Criação</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Criar ramal entre 4000 a 4999, se caso o número já exista, adicionar o próximo correspondente ou algum livre que não contém na lista de ramais.

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn_botoes" data-bs-dismiss="modal">Fechar</button>
                            </div>
                        </div>
                    </div>
                </div>




                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }


            </div>
        </div>
    </div>
</div>
